<!-- ğŸ”¥ FINAL SCRIPTS (Autoplay Unlock + Toggles) -->
<script>

// ABOUT TOGGLE
function toggleAbout(){
  const full = document.getElementById("aboutContent");
  const btn = document.querySelector(".about-toggle");

  let open = full.style.display === "block";
  full.style.display = open ? "none" : "block";
  btn.innerText = open ? "Read More â–¼" : "Read Less â–²";
}

// GAME DESCRIPTION TOGGLE
function toggleDesc(btn){
  let full = btn.previousElementSibling;
  let preview = full.previousElementSibling;

  let open = full.style.display === "block";
  full.style.display = open ? "none" : "block";
  preview.style.maxHeight = open ? "2.6rem" : "0";
  btn.innerText = open ? "Read More â–¼" : "Read Less â–²";
}

// FAQ TOGGLE
function toggleFAQ(q){
  let a = q.nextElementSibling;
  a.style.display = a.style.display === "block" ? "none" : "block";
}


// ===============================
// ğŸ”“ TRUE AUTOPLAY UNLOCK (works everywhere)
// ===============================

// 0.01s MP4 Base64 (browser allows autoplay)
const tinyVideoSrc =
"data:video/mp4;base64,AAAAHGZ0eXBtcDQyAAAAAG1wNDFtcDQyaXNvbWF2YzEAAAAIZnJlZQAAACRtZGF0AAAAAQAAAABMYXZmNTUuMzMuMTAw";

/*
ç†ç”±ï¼š
iOSã€Androidã€Chromeã€Safari éƒ½ä¸å…è®¸é¡µé¢ä¸€åŠ è½½å°±æ’­æ”¾å¤–éƒ¨è§†é¢‘ã€‚
ä½†æ˜¯å…è®¸æ’­æ”¾ã€çŸ­äº0.1ç§’ä¸”é™éŸ³çš„å†…åµŒè§†é¢‘ã€‘ï¼Œ
ä¸€æ—¦å®ƒæ’­æ”¾æˆåŠŸï¼Œå°±å¯ä»¥è§£é”æ‰€æœ‰è§†é¢‘çš„ autoplay æƒé™ã€‚
*/

document.addEventListener("DOMContentLoaded", () => {

  // åˆ›å»ºéšè—çš„è§£é”è§†é¢‘
  const unlockVideo = document.createElement("video");
  unlockVideo.src = tinyVideoSrc;
  unlockVideo.muted = true;
  unlockVideo.playsInline = true;
  unlockVideo.autoplay = true;
  unlockVideo.style.cssText = "width:0;height:0;opacity:0;position:absolute;z-index:-1;";
  document.body.appendChild(unlockVideo);

  const bg = document.getElementById("bgVideo");

  // å°è¯•æ’­æ”¾èƒŒæ™¯è§†é¢‘
  function tryPlay() {
    bg.play().catch(() => {
      setTimeout(tryPlay, 300);
    });
  }

  // é¦–æ¬¡æ’­æ”¾ unlockVideoï¼Œå†æ’­æ”¾ bgVideo
  unlockVideo.play()
    .then(() => {
      tryPlay();
    })
    .catch(() => {
      // è‹¥å¤±è´¥ï¼ŒæŒç»­å°è¯•
      const intv = setInterval(() => {
        unlockVideo.play().then(() => {
          clearInterval(intv);
          tryPlay();
        }).catch(()=>{});
      }, 400);
    });

});


</script>

